#:kivy 1.0.9

<NebulaGUI>:    
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Connect'
            on_release: root.connect()
        Label:
            text: root.state
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: root.executablePath
            Button:
                text: 'Choose Executable'
                on_release: root.chooseExecutable()
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: root.configPath
            Button:
                text: 'Choose Config'
                on_release: root.chooseConfig()
